<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPricipalFragment">

    <Button
        android:id="@+id/buttonJogador"
        android:layout_width="283dp"
        android:layout_height="91dp"
        android:text="Jogador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCasino"
        app:layout_constraintVertical_bias="0.303" />

    <TextView
        android:id="@+id/textViewCasino"
        android:layout_width="184dp"
        android:layout_height="85dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/alfa_slab_one"
        android:lineSpacingExtra="8sp"
        android:text="Casino"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EF0808"
        android:textSize="48sp"
        android:textStyle="italic"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="269dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/wheel"
        app:layout_constraintBottom_toTopOf="@+id/textViewCasino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>